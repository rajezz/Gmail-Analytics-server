{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": false,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "moduleResolution": "nodenext",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["typings.d.ts", "src/**/*", "environment.d.ts"],
  "exclude": ["./dist", "./node_modules"]
}
